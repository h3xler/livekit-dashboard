{% extends "base.html.j2" %}

{% block title %}Agents - LiveKit Dashboard{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center w-100">
    <div>
        <h1 class="page-title">Agents</h1>
        <div class="page-subtitle">
            Manage your voice AI agents
        </div>
    </div>
    <div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAgentModal">
            <i class="bi bi-plus-lg"></i> Create Agent
        </button>
    </div>
</div>
{% endblock %}

{% block content %}
<!-- Flash Message -->
{% if flash_message %}
<div class="alert alert-{{ 'success' if flash_type == 'success' else 'danger' }} alert-dismissible fade show" role="alert">
    {{ flash_message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{% endif %}

<!-- Agents Table -->
<div class="card">
    <div class="card-body">
        {% if agents %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Name</th>
                        <th>Provider</th>
                        <th>Model</th>
                        <th>Voice</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for agent in agents %}
                    <tr>
                        <td>
                            <form method="POST" action="/agents/{{ agent.id }}/toggle" style="display: inline;">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <button type="submit" class="btn btn-sm p-0 border-0 bg-transparent">
                                    {% if agent.enabled %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Enabled</span>
                                    {% else %}
                                    <span class="badge bg-secondary"><i class="bi bi-pause-circle"></i> Disabled</span>
                                    {% endif %}
                                </button>
                            </form>
                        </td>
                        <td>
                            <strong>{{ agent.name }}</strong>
                            {% if agent.n8n_mcp_url %}
                            <br><small class="text-muted"><i class="bi bi-link-45deg"></i> MCP Connected</small>
                            {% endif %}
                        </td>
                        <td>{{ model_providers.get(agent.model_provider, {}).get('name', agent.model_provider) }}</td>
                        <td><code>{{ agent.model }}</code></td>
                        <td>{{ agent.voice }}</td>
                        <td>
                            <div class="btn-group">
                                <form method="POST" action="/agents/{{ agent.id }}/test" style="display: inline;">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <button type="submit" class="btn btn-sm btn-outline-primary" {% if not agent.enabled %}disabled{% endif %} title="Test Agent">
                                        <i class="bi bi-play-fill"></i>
                                    </button>
                                </form>
                                <button type="button" class="btn btn-sm btn-outline-secondary" 
                                        onclick="editAgent('{{ agent.id }}', '{{ agent.name }}', '{{ agent.model_provider }}', '{{ agent.model }}', '{{ agent.voice }}', '{{ agent.first_message | replace("'", "\\'") }}', {{ 'true' if agent.noise_cancellation else 'false' }}, '{{ agent.n8n_mcp_url }}', '{{ agent.metadata }}')"
                                        title="Edit Agent">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        onclick="confirmDelete('{{ agent.id }}', '{{ agent.name }}')"
                                        title="Delete Agent">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-5">
            <i class="bi bi-robot" style="font-size: 3rem; color: var(--lk-text-muted);"></i>
            <h5 class="mt-3">No Agents Configured</h5>
            <p class="text-muted">Create your first voice AI agent to get started.</p>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAgentModal">
                <i class="bi bi-plus-lg"></i> Create Agent
            </button>
        </div>
        {% endif %}
    </div>
</div>

<!-- Create Agent Modal -->
<div class="modal fade" id="createAgentModal" tabindex="-1" aria-labelledby="createAgentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="POST" action="/agents/create">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <div class="modal-header">
                    <h5 class="modal-title" id="createAgentModalLabel"><i class="bi bi-robot"></i> Create New Agent</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Agent Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" required placeholder="e.g., Customer Support Agent">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="model_provider" class="form-label">Model Provider</label>
                            <select class="form-select" id="model_provider" name="model_provider" onchange="updateModels(this.value)">
                                {% for key, provider in model_providers.items() %}
                                <option value="{{ key }}" {% if key == 'google' %}selected{% endif %}>{{ provider.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="model" class="form-label">Model</label>
                            <select class="form-select" id="model" name="model">
                                {% for model in model_providers.google.models %}
                                <option value="{{ model }}">{{ model }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="voice" class="form-label">Voice</label>
                            <select class="form-select" id="voice" name="voice">
                                {% for voice in voices.google %}
                                <option value="{{ voice }}">{{ voice }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="first_message" class="form-label">First Message</label>
                        <textarea class="form-control" id="first_message" name="first_message" rows="2" placeholder="Hello! How can I help you today?">Hello! How can I help you today?</textarea>
                        <small class="text-muted">The greeting message the agent will say when joining a call.</small>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="noise_cancellation" name="noise_cancellation" checked>
                                <label class="form-check-label" for="noise_cancellation">Noise Cancellation</label>
                            </div>
                            <small class="text-muted">Enable background noise suppression</small>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="n8n_mcp_url" class="form-label">n8n MCP Server URL <span class="badge bg-info">Optional</span></label>
                        <input type="url" class="form-control" id="n8n_mcp_url" name="n8n_mcp_url" placeholder="http://n8n:5678/webhook/mcp">
                        <small class="text-muted">Connect to n8n workflows as tools for the agent.</small>
                    </div>
                    <div class="mb-3">
                        <label for="metadata" class="form-label">Metadata <span class="badge bg-secondary">Optional</span></label>
                        <textarea class="form-control" id="metadata" name="metadata" rows="2" placeholder='{"custom_field": "value"}'></textarea>
                        <small class="text-muted">Additional metadata in JSON format.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Agent</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Agent Modal -->
<div class="modal fade" id="editAgentModal" tabindex="-1" aria-labelledby="editAgentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="POST" id="editAgentForm">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <div class="modal-header">
                    <h5 class="modal-title" id="editAgentModalLabel"><i class="bi bi-pencil"></i> Edit Agent</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="edit_name" class="form-label">Agent Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="edit_name" name="name" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="edit_model_provider" class="form-label">Model Provider</label>
                            <select class="form-select" id="edit_model_provider" name="model_provider" onchange="updateModels(this.value, 'edit_')">
                                {% for key, provider in model_providers.items() %}
                                <option value="{{ key }}">{{ provider.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="edit_model" class="form-label">Model</label>
                            <select class="form-select" id="edit_model" name="model">
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="edit_voice" class="form-label">Voice</label>
                            <select class="form-select" id="edit_voice" name="voice">
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="edit_first_message" class="form-label">First Message</label>
                        <textarea class="form-control" id="edit_first_message" name="first_message" rows="2"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="edit_noise_cancellation" name="noise_cancellation">
                                <label class="form-check-label" for="edit_noise_cancellation">Noise Cancellation</label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="edit_n8n_mcp_url" class="form-label">n8n MCP Server URL</label>
                        <input type="url" class="form-control" id="edit_n8n_mcp_url" name="n8n_mcp_url">
                    </div>
                    <div class="mb-3">
                        <label for="edit_metadata" class="form-label">Metadata</label>
                        <textarea class="form-control" id="edit_metadata" name="metadata" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteAgentModal" tabindex="-1" aria-labelledby="deleteAgentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" id="deleteAgentForm">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteAgentModalLabel"><i class="bi bi-exclamation-triangle text-danger"></i> Delete Agent</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the agent "<strong id="deleteAgentName"></strong>"?</p>
                    <p class="text-danger"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_scripts %}
<script>
// Model and voice data from server
const modelProviders = {{ model_providers | tojson }};
const voicesByProvider = {{ voices | tojson }};

function updateModels(provider, prefix = '') {
    const modelSelect = document.getElementById(prefix + 'model');
    const voiceSelect = document.getElementById(prefix + 'voice');
    
    // Update models
    modelSelect.innerHTML = '';
    if (modelProviders[provider]) {
        modelProviders[provider].models.forEach(model => {
            const option = document.createElement('option');
            option.value = model;
            option.textContent = model;
            modelSelect.appendChild(option);
        });
    }
    
    // Update voices - use provider specific or fallback to google
    voiceSelect.innerHTML = '';
    const voices = voicesByProvider[provider] || voicesByProvider['google'] || [];
    voices.forEach(voice => {
        const option = document.createElement('option');
        option.value = voice;
        option.textContent = voice;
        voiceSelect.appendChild(option);
    });
}

function editAgent(id, name, modelProvider, model, voice, firstMessage, noiseCancellation, n8nMcpUrl, metadata) {
    document.getElementById('editAgentForm').action = '/agents/' + id + '/update';
    document.getElementById('edit_name').value = name;
    document.getElementById('edit_model_provider').value = modelProvider;
    
    // Update models dropdown and select the current model
    updateModels(modelProvider, 'edit_');
    document.getElementById('edit_model').value = model;
    document.getElementById('edit_voice').value = voice;
    
    document.getElementById('edit_first_message').value = firstMessage;
    document.getElementById('edit_noise_cancellation').checked = noiseCancellation;
    document.getElementById('edit_n8n_mcp_url').value = n8nMcpUrl || '';
    document.getElementById('edit_metadata').value = metadata || '';
    
    new bootstrap.Modal(document.getElementById('editAgentModal')).show();
}

function confirmDelete(id, name) {
    document.getElementById('deleteAgentForm').action = '/agents/' + id + '/delete';
    document.getElementById('deleteAgentName').textContent = name;
    new bootstrap.Modal(document.getElementById('deleteAgentModal')).show();
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    // Set initial models for create form
    updateModels('google');
});
</script>
{% endblock %}
